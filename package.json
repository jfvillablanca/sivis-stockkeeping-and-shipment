{
  "name": "sivis-stockkeeping-and-shipment",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "concurrently 'npx tsc' 'npm run copy-views'",
    "start": "node dist/app.js",
    "dev": "concurrently 'npx tsc --watch' 'npm run copy-views' 'nodemon dist/app.js'",
    "format": "npx -p prettier@2.8.7 -p pretty-quick pretty-quick",
    "prepare": "husky install",
    "copy-views": "mkdir -p ./dist/views && cp -r ./src/views ./dist && mkdir -p ./dist/public && cp -r ./src/public ./dist"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts,hbs,css",
    "events": {
      "restart": "npm run copy-views"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-handlebars": "^7.0.7",
    "hbs": "^4.2.0",
    "http-errors": "^2.0.0",
    "mongoose": "^7.0.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/express-handlebars": "^6.0.0",
    "@types/http-errors": "^2.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "concurrently": "^8.0.1",
    "husky": "^8.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4"
  }
}
