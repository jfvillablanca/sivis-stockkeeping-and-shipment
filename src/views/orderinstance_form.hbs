<h1>{{ header }}</h1>

<form method="POST" action="">
  <div class="form-group">
    <label for="magic_item">Magic Item:</label>
    <select 
        id="magic_item" 
        class="form-control" 
        name="magic_item" 
        required="true"
    >
      {{#each magicItemEnumValues}}
        <option value="{{ this }}">{{ this }}</option>
      {{/each}}
    </select>

    <label for="order_quantity">Order quantity:</label>
    <input 
        id="order_quantity" 
        class="form-control" 
        placeholder="1"
        value="1"
        type="number" 
        name="order_quantity" 
        required="true"
    />
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>

{{#if errors}}
  <ul>
    {{#each errors}}
      <li>{{msg}}</li>
    {{/each}}
  </ul>
{{/if}}
