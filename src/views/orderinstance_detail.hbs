<h1>{{ header }}</h1>
<div style="margin-left:20px;margin-top:20px">
  <h4>Order No: {{ orderinstance._id }}</h4>
  <ul>
    {{#each orderinstance.orderArray as |line_item| }}
      <li><p>{{line_item.order_quantity}} units of <a href="{{line_item.magic_item.url}}">{{line_item.magic_item.item_name}}</a></p></li>
    {{/each}}
  </ul>
  <hr />
  <p><a href="{{ orderinstance.url }}/delete">Delete Order Instance</a></p>
  <p><a href="{{ orderinstance.url }}/update">Update Order Instance</a></p>
</div>
