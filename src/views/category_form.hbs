<h1>{{ header }}</h1>

<form method="POST" action="">
  <div class="form-group">
    <label for="name">Category:</label>
    <input id="name" class="form-control" type="text" placeholder="Rings, Amulets, etc." name="name" value="{{#if category}}{{category.name}}{{/if}}">
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>

{{#if errors}}
  <ul>
    {{#each errors}}
      <li>{{msg}}</li>
    {{/each}}
  </ul>
{{/if}}
