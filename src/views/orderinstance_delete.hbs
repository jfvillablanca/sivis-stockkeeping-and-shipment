<h1>{{header}}: {{orderinstance._id}}</h1>
<p>Do you really want to delete this Order Instance?</p>
<ul>
  {{#each orderinstance.orderArray as |line_item| }}
    <li><p>{{line_item.order_quantity}} units of <a href="{{line_item.magic_item.url}}">{{line_item.magic_item.item_name}}</a></p></li>
  {{/each}}
</ul>

<form method="POST" action="">
  <div class="form-group">
    <input id="orderinstanceid" class="form-control" type="hidden" name="orderinstanceid" required="true" value="{{orderinstance._id}}">
  </div>
  
  <button class="btn btn-primary" type="submit">Delete</button>
</form>
